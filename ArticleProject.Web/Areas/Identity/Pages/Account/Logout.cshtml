@page
@model LogoutModel
@{
    ViewData["Title"] = "تـسجـيل الخـروج";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">إضغط هنا لتسجيل الخروج</button>
            </form>
        }
        else
        {
            <p>لـقد قـمت بـتسجـيل الخـروج</p>
        }
    }
</header>
